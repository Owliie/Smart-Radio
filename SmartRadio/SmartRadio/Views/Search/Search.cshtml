@model IEnumerable<SearchByNameListViewModel>

@{
    ViewData["Title"] = "Search";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/search.css"/>

@if (!Model.Any())
{
    <h1 class="display-1">Sorry, there is no such pal :c</h1>
}
else
{
    <ul class="list-group list-group-flush w-100">
        @foreach (var person in Model)
        {
        <li class="list-group-item align-content-between w-50" id="search-result-@person.Id">
            @person.UserName
            <button class="btn btn-outline-info float-right" onclick="follow('@person.Id')">Follow</button>
        </li>
        }
    </ul>
}

@section Scripts
{
    <script src="~/js/searchIndex.js" type="text/javascript"></script>
}
